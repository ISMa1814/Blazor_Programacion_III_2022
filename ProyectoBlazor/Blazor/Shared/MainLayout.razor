@inherits LayoutComponentBase

//Este es el titulo de la pagina
<PageTitle>Programación 3</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            //Esto es para que si no esta autorizado que inicie sesion
            <AuthorizeView>
                <Authorized>

                    <span class="ml-md-auto">
                        Usuario Conectado: @context.User.Claims.First().Value
                        <a href="/account/logout">Salir</a>
                    </span>

                </Authorized>

                <NotAuthorized>
                    <a href="/account/login" class="ml-md-auto" >Iniciar Sesión</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>